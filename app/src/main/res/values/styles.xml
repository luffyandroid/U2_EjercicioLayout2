<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="estiloBotonGuardar">
        <item name="android:background">@color/colorverde</item>
        <item name="android:padding">@dimen/paddingGeneral</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/texsizeboton</item>
        <item name="android:gravity">right</item>

    </style>
    <style name="cabecera">
        <item name="android:layout_height">@dimen/cabecera</item>
        <item name="android:background">@drawable/cabecera</item>
    </style>
    <style name="botonbloque">
        <item name="android:background">@color/colorbotonbloque</item>
        <item name="android:textSize">@dimen/textobotonbloque</item>
        <item name="android:layout_weight">@dimen/anchobotonbloque</item>
        <item name="android:layout_height">@dimen/altobotonbloque</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="botonejer2">
        <item name="android:background">@color/colorbotonbloque</item>
        <item name="android:textSize">@dimen/tamaniotextobotonejer2</item>
        <item name="android:layout_weight">@dimen/anchobotonejer2</item>
        <item name="android:layout_height">@dimen/altobotonbloque</item>
        <item name="android:layout_margin">10dp</item>
    </style>





    <style name="botonabajo">
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
